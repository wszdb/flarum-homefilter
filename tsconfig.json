{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "m",
    "jsxFragmentFactory": "m.fragment",
    "skipLibCheck": true,
    "strict": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "flarum/*": ["../../vendor/flarum/core/js/src/*"]
    }
  },
  "include": ["js/src/**/*"],
  "exclude": ["node_modules", "js/dist"]
}
